<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tecnm.celaya.edu.mx.despachadorapp.LifoController">
   <left>
      <VBox prefHeight="200.0" prefWidth="250.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Procesos en Espera">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TableView fx:id="processTable" prefHeight="400.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="pidColumn" prefWidth="75.0" text="PID" />
                <TableColumn fx:id="arrivalColumn" prefWidth="75.0" text="Llegada" />
                  <TableColumn fx:id="durationColumn" prefWidth="75.0" text="Duración" />
              </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="50.0">
               <children>
                  <Label text="Timer:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="timerLabel" text="0">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="100.0" style="-fx-border-color: black; -fx-border-width: 2;">
                     <children>
                        <Label text="CPU" />
                        <Label fx:id="cpuProcessLabel" text="Libre" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-border-color: black; -fx-border-width: 2;">
                     <children>
                        <Label text="MEMORIA (LIFO)" />
                        <Label fx:id="memoryProcessLabel" text="Vacía" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Label text="Estado de Procesos">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TableView fx:id="processStatusTable" prefHeight="250.0" prefWidth="200.0">
               <columns>
                  <TableColumn fx:id="statusPidColumn" prefWidth="75.0" text="PID" />
                  <TableColumn fx:id="statusLocationColumn" prefWidth="100.0" text="Ubicación" />
                  <TableColumn fx:id="statusStateColumn" prefWidth="75.0" text="Estado" />
                  <TableColumn fx:id="statusDurationColumn" prefWidth="100.0" text="Duración Restante" />
               </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="150.0" spacing="10.0" style="-fx-border-color: black; -fx-border-width: 2;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Procesos Finalizados">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <VBox fx:id="finishedProcessesVBox" spacing="5.0" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </right>
   <bottom>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackButtonClick" text="&lt;-" />
            <Button fx:id="playPauseButton" mnemonicParsing="false" onAction="#onPlayPauseButtonClick" text="Pausa" />
            <Button fx:id="nextButton" mnemonicParsing="false" onAction="#onNextButtonClick" text="-&gt;" />
            <Button fx:id="restartButton" mnemonicParsing="false" onAction="#onRestartButtonClick" text="Reiniciar" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
