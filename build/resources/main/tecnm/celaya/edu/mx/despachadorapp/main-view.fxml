        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Bienvenido al Simulador de Algoritmos de Planificación"/>
    <Button text="Iniciar Simulación FIFO" onAction="#onFIFOButtonClick"/>
    <Button text="Iniciar Simulación SJF" onAction="#onSJFButtonClick"/>
    <Button text="Iniciar Simulación Round Robin + LIFO" onAction="#onRoundRobinLIFOButtonClick"/>
